{
  "name": "ubiquitous-octo-giggle",
  "private": true,
  "version": "0.0.0-development",
  "description": "kafka zookeeper microservices fun",
  "scripts": {
    "save": "git-cz",
    "test": "lerna run test",
    "release": "lerna-semantic-release pre && lerna-semantic-release perform && lerna-semantic-release post",
    "complexity-report": "es6-plato -r -d ./report packages"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kane-thornwyrd/ubiquitous-octo-giggle.git"
  },
  "keywords": [
    "kafka",
    "zookeeper",
    "microservices",
    "fun",
    "forfun"
  ],
  "author": "Jean-cédric Thérond <jean.cedric.t@gmail.com>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/kane-thornwyrd/ubiquitous-octo-giggle/issues"
  },
  "homepage": "https://github.com/kane-thornwyrd/ubiquitous-octo-giggle#readme",
  "devDependencies": {
    "commitizen": "2.10.1",
    "cz-lerna-changelog": "1.2.1",
    "es6-plato": "1.0.18",
    "husky": "1.0.0-rc.8",
    "lerna": "2.11.0",
    "lerna-semantic-release": "9.1.0",
    "prettier": "1.13.5",
    "pretty-quick": "1.6.0"
  },
  "release": {
    "branch": "master"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "husky": {
    "hooks": {
        "pre-commit": "npm run test && pretty-quick --staged && complexity-report"
    }
  }
}
